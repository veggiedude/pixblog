<p id="notice"><%= notice %></p>

<h1>Listing Pins</h1>

<table cellpadding="3" cellspacing="5">
  <thead>
    <tr>
      <th>Image</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pins.each do |pin| %>
      <tr>
        <td><%= image_tag pin.image.url(:medium) %></td>
        <td><%= pin.description %></td>
        <td><%= link_to 'Show', pin, class:'btn btn-success' %></td>
        <% if pin.user == current_user %>
        <td><%= link_to 'Edit', edit_pin_path(pin), class:'btn btn-primary' %></td>
        <td><%= link_to 'Destroy', pin, class:'btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
      <tr><td colspan="4"><hr></td></tr>
    <% end %>
  </tbody>
</table>

<br>

